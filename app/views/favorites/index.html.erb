<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= image_tag favorite.picture.image.to_s, size: '100x100'%></td>
        <td><%= favorite.picture.content%>
        <td><%= favorite.picture.user.name%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>